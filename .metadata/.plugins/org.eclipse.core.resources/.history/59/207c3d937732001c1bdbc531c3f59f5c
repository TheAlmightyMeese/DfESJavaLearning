package com.qa.Npc;

public class NPC {
	public String Name;
	public int HP;
	public String Job;
	public String Weapon;
	public String Armour;
	public boolean Living;
	
	
	public void statusCheck() {
		if (Living = true) {
		System.out.println("Still Alive");
		}
	}
	
	public NPC(String Name,int HP, String Job, String Weapon, String Armour,boolean Living) {
		this.Name = Name;
		this.HP = HP;
		this.Job = Job;
		this.Weapon = Weapon;
		this.Armour = Armour;
		this.Living = Living;
				
	}
		
	
}
