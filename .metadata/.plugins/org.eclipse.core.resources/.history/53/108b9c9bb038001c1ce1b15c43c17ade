package com.qa.enumlist;

import java.util.Random;

import com.qa.enumlist.Card.Ranks;
import com.qa.enumlist.Card.Suits;

public class Dealer {


	public static String Draw() {
	String Rank = Ranks.values()[new Random().nextInt(Ranks.values().length)].toString();
	String Suit = Suits.values()[new Random().nextInt(Suits.values().length)].toString();
	String Draw = Rank + "of " + Suit;
	return Draw;
	}	
	
}
