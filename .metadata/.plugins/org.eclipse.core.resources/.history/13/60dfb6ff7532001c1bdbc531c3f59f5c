package com.qa.Npc;

public class NPC {
	public String Name;
	public int HP;
	public String Job;
	public String Weapon;
	public String Armour;
	public boolean Living;
	
	
	public void statusCheck() {
		if (Living = true) {
		System.out.println("Still Alive");
		}
	}
	
	public NPC() {
		Name = "Peasant";
		HP = 2;
		Job = "Commoner";
		Weapon = "Spoon";
		Armour = "Common Clothes";
		Living = true;
				
		
		
	}
	
	
}
