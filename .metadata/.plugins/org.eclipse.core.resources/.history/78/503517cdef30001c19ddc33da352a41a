	public static int Add6() {
		int Res1 = Dice.d6();
		int Res2 = Dice.d6();
		int Res3 = Dice.d6();
		int Res4 = Dice.d6();
		int result = (Res1 + Res2 + Res3 + Res4);
		return result;
	}	
		
