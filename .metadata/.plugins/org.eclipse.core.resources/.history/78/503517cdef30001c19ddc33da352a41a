package com.qa.runner;

import java.util.Random;


public class Dice {
	
	public static int d4() {
		int roll = new Random().nextInt(4)+ 1;
			return roll;
	}
	public static int d3() {
		int roll = new Random().nextInt(3)+ 1;
			return roll;
}
