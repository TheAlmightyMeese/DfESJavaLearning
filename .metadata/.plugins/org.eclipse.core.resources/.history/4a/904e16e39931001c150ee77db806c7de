package com.qa.day3;

import java.util.Random;

public class LoopEx {


	public static void Spending() {
		
		int Wallet = 300;
		
		while (Wallet > 87) {
			Wallet -= 45;
			if (Wallet < 87) 
				System.out.println("You're spending too much money!");
				System.out.println(Wallet);
		}
	
	}
	
	public static void RandSpend() {
		int Wallet = 300;
		while (Wallet > 87) {
			int Randnum = Random(). 
				Wallet -= Randnum
			if (Wallet < 87) 
				System.out.println("You're spending too much money!");
				System.out.println(Wallet);
		}
	}
	
}
